<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">
    
    <!-- Web Application Name -->
    <display-name>Cricket Database Application</display-name>
    
    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>PlayerStatsServlet</servlet-name>
        <servlet-class>PlayerStatsServlet</servlet-class>
    </servlet>
    
    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>PlayerStatsServlet</servlet-name>
        <url-pattern>/PlayerStatsServlet</url-pattern>
    </servlet-mapping>
    
</web-app>
